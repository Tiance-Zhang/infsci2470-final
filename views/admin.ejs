                      // }).appendTo($(".checklist_table"));
                      
                      
                      
                      $(".status").each(function(){
                        switch($(this).html()) {
                          case "1":
                            $(this).parent().attr('class', 'startedTask');
                            break;
                          case "2":
                            $(this).parent().attr('class', 'assignedTask');
                            break;
                          case "3":
                            $(this).parent().attr('class', 'finishedTask');
                            break;
                            
                        }
                      });
                      
                      
                        $("#checklist_table td").hide();
                        $("[name='list_id']").find('td').show();
                       $(".list_id_button").click(function() {
                        // $(this).parent().parent().find('td').toggle();
                          $(this).parent().parent().find("td[name='name']").toggle();

                        });
                      
                      
                      
                      
                      
                    });
