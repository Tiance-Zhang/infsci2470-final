  <h3 class="entry-title">There are three task status, which are <div style="color:gray;">completed status in gray,</div> 
    <div style="color:blue;">not yet started status in blue</div> <div style="color:red;">not done yet status in red.</div>
     </h3>
  
     <% if (cart) { %>
 <div class="table-responsive">
            
                <% cart.forEach(function(cart){ %>
          <table class="checklist_table" id="checklist_table">
            <tr>
                    <th name="list_id" class="list_id_button"><%= cart.email %></th>
              </tr>
 <% cart.product_list.forEach(function(product){ %>
      <tr><td name="name"><%= product.TaskName %><span class="status"><%= product.status %></span></td></tr>
  
  
  <% }); %>
 </table>
                    <% }); %>
  </div>

        <% } %>


