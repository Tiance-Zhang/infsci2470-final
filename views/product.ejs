<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>movies</title>
  <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
</head>
<body>
  <div class="container" style="padding-top: 20px">
  <nav class="nav">
    <li class="nav-item">
      <a class="nav-link active" href="/">Home</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/product">Check All Products</a>
    </li>
    
  </nav>
  
   <div>
    
    <ul class="list-group">
      
      <% products.products.forEach(function(item) { %>
      <div class="card">
        <li class="list-group-item">ID: <%= item.name %></li>
        <li class="list-group-item">Title: <%= item.size %></li>
        <li class="list-group-item">Year: <%= item.price %></li>
        <li class="list-group-item">Genre: <%= item.volumn %></li>
        <li class="list-group-item"><a href="/delete/<%= item.id %>">Delete</a></li>
        
      </div>
      <br>
      <% }) %>
     
    </ul>
    
  </div>
    
  </div>
</body>
</html>
